<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.hermit.windblink" android:versionCode="1"
	android:versionName="1.0">
	
	<application android:label="@string/app_name" android:icon="@drawable/spectrum_icon">
	
		<activity android:name=".WindBlink"
				  android:label="@string/app_name"
				  android:launchMode="singleTop">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".Preferences" android:label="@string/prefs_title">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>
		
	</application>
	
	<uses-sdk android:minSdkVersion="3" />

	<uses-permission android:name="android.permission.RECORD_AUDIO" />

</manifest> 